# Example Terraform variables file
# Copy this to terraform.tfvars and customize for your environment

project_name = "kessan"
environment  = "prod"
aws_region   = "ap-northeast-1"

# VPC Configuration
vpc_cidr                = "10.0.0.0/16"
public_subnet_cidrs     = ["10.0.1.0/24", "10.0.2.0/24"]
private_subnet_cidrs    = ["10.0.10.0/24", "10.0.20.0/24"]
database_subnet_cidrs   = ["10.0.30.0/24", "10.0.40.0/24"]

# RDS Configuration
db_instance_class            = "db.t3.medium"
db_allocated_storage         = 100
db_max_allocated_storage     = 1000
db_backup_retention_period   = 7

# ElastiCache Configuration
redis_node_type       = "cache.t3.medium"
redis_num_cache_nodes = 2

# ECS Configuration
ecs_cpu    = 512
ecs_memory = 1024

backend_desired_count  = 2
frontend_desired_count = 2

# Domain Configuration
domain_name     = "kessan.example.com"
certificate_arn = "arn:aws:acm:ap-northeast-1:123456789012:certificate/12345678-1234-1234-1234-123456789012"

# Monitoring Configuration
enable_detailed_monitoring = true
log_retention_days        = 30