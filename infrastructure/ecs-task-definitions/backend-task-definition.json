{
  "family": "kessan-prod-backend",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::${AWS_ACCOUNT_ID}:role/kessan-prod-ecs-execution-role",
  "taskRoleArn": "arn:aws:iam::${AWS_ACCOUNT_ID}:role/kessan-prod-ecs-task-role",
  "containerDefinitions": [
    {
      "name": "backend",
      "image": "${BACKEND_ECR_URI}:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        },
        {
          "containerPort": 9090,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "DEBUG",
          "value": "False"
        },
        {
          "name": "ENVIRONMENT",
          "value": "production"
        },
        {
          "name": "ALLOWED_HOSTS",
          "value": "kessan.finance,*.kessan.finance"
        },
        {
          "name": "CORS_ORIGINS",
          "value": "https://kessan.finance,https://www.kessan.finance"
        },
        {
          "name": "ALGORITHM",
          "value": "HS256"
        },
        {
          "name": "ACCESS_TOKEN_EXPIRE_MINUTES",
          "value": "30"
        },
        {
          "name": "REFRESH_TOKEN_EXPIRE_DAYS",
          "value": "7"
        },
        {
          "name": "FROM_EMAIL",
          "value": "noreply@kessan.finance"
        },
        {
          "name": "DAILY_AI_BUDGET_USD",
          "value": "500.0"
        },
        {
          "name": "MONTHLY_AI_BUDGET_USD",
          "value": "12000.0"
        },
        {
          "name": "RATE_LIMIT_PER_MINUTE",
          "value": "120"
        },
        {
          "name": "RATE_LIMIT_PER_HOUR",
          "value": "5000"
        },
        {
          "name": "LOG_LEVEL",
          "value": "INFO"
        },
        {
          "name": "STRUCTURED_LOGGING",
          "value": "true"
        },
        {
          "name": "ENABLE_METRICS",
          "value": "true"
        },
        {
          "name": "METRICS_PORT",
          "value": "9090"
        },
        {
          "name": "SECURE_COOKIES",
          "value": "true"
        },
        {
          "name": "HTTPS_ONLY",
          "value": "true"
        }
      ],
      "secrets": [
        {
          "name": "DATABASE_URL",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-1:${AWS_ACCOUNT_ID}:secret:kessan-prod-db-connection"
        },
        {
          "name": "REDIS_URL",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-1:${AWS_ACCOUNT_ID}:secret:kessan-prod-redis-connection"
        },
        {
          "name": "SECRET_KEY",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-1:${AWS_ACCOUNT_ID}:secret:kessan-prod-app-secrets:JWT_SECRET::"
        },
        {
          "name": "ALPHA_VANTAGE_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-1:${AWS_ACCOUNT_ID}:secret:kessan-prod-app-secrets:ALPHA_VANTAGE_API_KEY::"
        },
        {
          "name": "GOOGLE_GEMINI_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-1:${AWS_ACCOUNT_ID}:secret:kessan-prod-app-secrets:GOOGLE_GEMINI_API_KEY::"
        },
        {
          "name": "NEWS_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-1:${AWS_ACCOUNT_ID}:secret:kessan-prod-app-secrets:NEWS_API_KEY::"
        },
        {
          "name": "GOOGLE_CLIENT_ID",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-1:${AWS_ACCOUNT_ID}:secret:kessan-prod-app-secrets:GOOGLE_CLIENT_ID::"
        },
        {
          "name": "GOOGLE_CLIENT_SECRET",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-1:${AWS_ACCOUNT_ID}:secret:kessan-prod-app-secrets:GOOGLE_CLIENT_SECRET::"
        },
        {
          "name": "LINE_CLIENT_ID",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-1:${AWS_ACCOUNT_ID}:secret:kessan-prod-app-secrets:LINE_CLIENT_ID::"
        },
        {
          "name": "LINE_CLIENT_SECRET",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-1:${AWS_ACCOUNT_ID}:secret:kessan-prod-app-secrets:LINE_CLIENT_SECRET::"
        },
        {
          "name": "SENDGRID_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-1:${AWS_ACCOUNT_ID}:secret:kessan-prod-app-secrets:SENDGRID_API_KEY::"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/kessan-prod-backend",
          "awslogs-region": "ap-northeast-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:8000/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}