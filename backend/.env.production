# Production Environment Configuration for Japanese Stock Analysis Platform
# This file contains production-specific environment variables

# Application
DEBUG=False
ENVIRONMENT=production
ALLOWED_HOSTS=kessan.finance,*.kessan.finance
CORS_ORIGINS=https://kessan.finance,https://www.kessan.finance

# Database - Will be populated from AWS Secrets Manager
DATABASE_URL=postgresql://kessan_user:${DB_PASSWORD}@${RDS_ENDPOINT}:5432/kessan_prod
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40

# Redis - Will be populated from AWS Secrets Manager
REDIS_URL=redis://:${REDIS_AUTH_TOKEN}@${REDIS_ENDPOINT}:6379

# JWT - Will be populated from AWS Secrets Manager
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# External APIs - Will be populated from AWS Secrets Manager
# These will be injected from AWS Secrets Manager at runtime

# Email
FROM_EMAIL=noreply@kessan.finance

# Cost Control - Production budgets
DAILY_AI_BUDGET_USD=500.0
MONTHLY_AI_BUDGET_USD=12000.0

# Rate Limiting - Production limits
RATE_LIMIT_PER_MINUTE=120
RATE_LIMIT_PER_HOUR=5000

# Logging
LOG_LEVEL=INFO
STRUCTURED_LOGGING=true

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Security
SECURE_COOKIES=true
HTTPS_ONLY=true